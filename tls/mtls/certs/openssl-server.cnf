[ req ]
default_bits       = 2048
prompt             = no
default_md         = sha256
req_extensions     = req_ext
distinguished_name = dn

[ dn ]
CN = demo-server.example.com

[ req_ext ]
extendedKeyUsage = serverAuth,clientAuth
subjectAltName = @alt_names

[ alt_names ]
DNS.1 = demo-server.example.com
DNS.2 = localhost
DNS.3 = node1
DNS.4 = node2
DNS.5 = node3

